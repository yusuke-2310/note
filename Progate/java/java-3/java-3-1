  // メインメソッドからメソッドを呼び出す
  class Main {
  public static void main(String[] args) {
    hello();
  }
  
  public static void hello() {
    // "Hello World"を、"Hello Java"に書き換えてください
    System.out.println("Hello Java");
  }
}


  // 
  class Main {
① public static void main(String[] args) {
    // printDataメソッドを呼び出してください
  ② printData();
  }
  
  // printDataメソッドを定義してください
  public static void printData(){
  ③ System.out.println("私の名前はKate Jonesです");
  }
}
  ①mainメソッドが呼ばれる
  ②mainメソッドの中で、printDataメソッドが呼ばれる
  ③helloメソッドの中で、
   System.out.println("私の名前はKate Jonesです")
   が実行される
 
 
  // 引数を使った出力 
  class Main {
  public static void main(String[] args) {
    // 引数に「Kate Jones」を渡してください
    printData("Kate Jones");
    
    // 引数に「John Christopher Smith」を渡してください
    printData("John Christopher Smith");
    
  }

  // 引数を受け取るようにしてください
  public static void printData(String name) {
    // 「私の名前は◯◯です」と出力されるように書き換えてください
    System.out.println("私の名前は" + name + "です");
    
  }
}


  // 複数の引数を扱うには？
class Main {
  public static void main(String[] args) {
    // それぞれ年齢に関する引数を追加してください
    printData("Kate Jones",27);                     // ←文字列、整数の順番にした場合
    printData("John Christopher Smith",65);         // ←こちらも同じく
  }

  // 年齢に関する引数を受け取れるようにしてください
  public static void printData(String name, int age) {   // ←こちらの引数も仮引数と同じ順番にする必要がある
    System.out.println("私の名前は" + name + "です");
    // 「年齢は◯◯歳です」と出力してください
    System.out.println("年齢は" + age + "歳です");
    
  }
}